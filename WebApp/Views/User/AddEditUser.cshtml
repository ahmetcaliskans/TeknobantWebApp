@model Core.Entities.Concrete.User


<div class="row">
    <div class="col-xl-12">
        <div style="margin:5px 5px  5px 5px">
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtUserId" type="number" disabled="disabled" value="@if (Model != null) @Model.UserId">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Kullanıcı Kodu</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtUserName" type="text" placeholder="Kullanıcı Kodu" value="@if (Model != null) @Model.UserName">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Kullanıcı Adı</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtFirstName" type="text" placeholder="Kullanıcı Adı" value="@if (Model != null) @Model.FirstName">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Kullanıcı Soyadı</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtLastName" type="text" placeholder="Kullanıcı Soyadı" value="@if (Model != null) @Model.LastName">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Ünvan</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtUnvan" type="text" placeholder="Ünvan" value="@if (Model != null) @Model.Title">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-9">
                    <label class="checkbox">
                        <input type="checkbox" id="chkActive" @Html.Raw((Model != null) ? (((Model.Active) ? "checked" : "")) : "checked")>
                        <span></span> Aktif
                    </label>
                </div>
            </div>

            @await Component.InvokeAsync("OfficeList", new { officeId = ((Model == null || Model.OfficeId == null) ? (int)0 : (int)Model.OfficeId) })

            @await Component.InvokeAsync("RoleTypeList", new { roleTypeId = ((Model == null || Model.RoleTypeId == null) ? (int)0 : (int)Model.RoleTypeId) })


        </div>
    </div>
</div>