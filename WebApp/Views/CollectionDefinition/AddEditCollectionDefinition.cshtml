@model Entities.Concrete.CollectionDefinition


<div class="row">
    <div class="col-xl-12">
        <div style="margin:5px 5px  5px 5px">
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtId" type="number" disabled="disabled" value="@if (Model != null) @Model.Id">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Tahsilat Tanımı Adı</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtName" type="text" placeholder="Tahsilat Tanımı Adı" value="@if (Model != null) @Model.Name">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Açıklama</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtDescription" type="text" placeholder="Açıklama" value="@if (Model != null) @Model.Description">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Sıra</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtSequence" type="number" value="@if (Model != null) @Model.Sequence">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            @*<div class="form-group row fv-plugins-icon-container">
            <label class="col-xl-3 col-lg-3 col-form-label">Açıklama</label>
            <div class="col-lg-9 col-xl-9">
                <input class="form-control" id="txtCollectionDefinitionTypeName" type="text" placeholder="Tahsilat Tipi" value="@if (Model != null) @Model.CollectionDefinitionType.Name">
                <div class="fv-plugins-message-container"></div>
            </div>
            </div>*@

            @await Component.InvokeAsync("CollectionDefinitionTypeList", new { collectionDefinitionTypeId = ((Model == null || Model.CollectionDefinitionType == null) ? (int)99 : (int)Model.CollectionDefinitionTypeId) })


            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-9">
                    <label class="checkbox">
                        <input type="checkbox" id="chkIsSequence" @Html.Raw((Model != null) ? (((Model.IsSequence) ? "checked" : "")) : "checked")>
                        <span></span> Sıra Takibi Var
                    </label>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-9">
                    <label class="checkbox">
                        <input type="checkbox" id="chkPayBySelf" @Html.Raw((Model != null) ? (((Model.PayBySelf) ? "checked" : "")) : "checked")>
                        <span></span> Kendisi Ödeyebilir
                    </label>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-9">
                    <label class="checkbox">
                        <input type="checkbox" id="chkActive" @Html.Raw((Model != null) ? (((Model.Active) ? "checked" : "")) : "checked")>
                        <span></span> Aktif
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>