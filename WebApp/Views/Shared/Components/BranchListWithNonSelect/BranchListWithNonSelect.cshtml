@model dynamic


<div class="form-group row">
    <label class="col-form-label col-lg-3 col-xl-3">Branş</label>
    <div class="col-lg-9 col-xl-9">
        <select class="form-control" name="selectBranch" id="selectBranch">
            @if ((int)Model.SelectedId == -99)
            {
                <option selected="" value="0"> </option>
            }

            @if (Model.Branch != null)
            {

                @foreach (var branch in Model.Branch as List<Entities.Concrete.Branch>)
                {
                    if (branch.Id == (int)Model.SelectedId)
                    {
                        <option selected="" value="@branch.Id">@branch.Name.ToUpper()</option>
                    }
                    else
                    {
                        <option value="@branch.Id">@branch.Name.ToUpper()</option>
                    }
                }

            }
        </select>
    </div>
</div>
