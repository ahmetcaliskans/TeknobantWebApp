@model Entities.Concrete.FixtureDefinition


<div class="row">
    <div class="col-xl-12">
        <div style="margin:5px 5px  5px 5px">
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtId" type="number" disabled="disabled" value="@if (Model != null) @Model.Id">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Demirbaş Tanımı Adı</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtName" type="text" placeholder="Demirbaş Tanımı Adı" value="@if (Model != null) @Model.Name">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Açıklama</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtDescription" type="text" placeholder="Açıklama" value="@if (Model != null) @Model.Description">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Yıl</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtYear" type="number" value="@if (Model != null) @Model.Year">
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Not</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtNote" type="text" placeholder="Açıklama" value="@if (Model != null) @Model.Note">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-9">
                    <label class="checkbox">
                        <input type="checkbox" id="chkActive" @Html.Raw((Model != null) ? (((Model.Active) ? "checked" : "")) : "checked")>
                        <span></span> Aktif
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>