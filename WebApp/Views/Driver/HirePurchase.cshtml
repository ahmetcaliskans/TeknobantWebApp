@model dynamic

@{
    var _courseFee = Model.CourseFee;
    var _collectionDefinitionType = Model.CollectionDefinitionType;
}

<div class="row">
    <div class="col-xl-12">
        <div style="margin:5px 5px  5px 5px">

            <div class="form-group row" hidden="hidden">
                <label class="col-xl-3 col-lg-3 col-form-label">Plan Tipi</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtCollectionDefinitionType" type="number" disabled="disabled" value="@_collectionDefinitionType">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Kurs Ücreti</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control numeric2" id="txtDriverCourseFeeForHirePurchase" type="text" value="@_courseFee" disabled="disabled">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Taksit Başlangıç Tarihi</label>
                <div class="col-lg-9 col-xl-9 date">
                    <input type="text" class="form-control" value="@DateTime.Now.ToShortDateString()" id="kt_datepicker_3" name="txtHirePurchaseStartDate" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Taksit Sayısı</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtHirePurchaseCount" type="number" value="1">
                </div>
            </div>

        </div>
    </div>
</div>

<script charset="utf-8" type="text/javascript" src="~/assets/js/pages/crud/forms/widgets/input-mask.js"></script>
<script charset="utf-8" type="text/javascript" src="~/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js"></script>