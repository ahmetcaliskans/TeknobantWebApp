@model Entities.Concrete.DriverInformation

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>As Gözde Sürücü Kursu Adres Beyan Formu</title>
</head>
<body>

    <table style="width: 100%; min-height: 150px;">
        <tr style="text-align: center;">
            <td>
                <a><b>ADRES BEYANI</b></a>
                <br>
                <a><b>(KİŞİ BEYANI)</b><a>
            </td>
        </tr>
    </table>

    <table style='width:400px; border: 1px  solid black; margin-left: auto; margin-right: auto; border-collapse: collapse;'>
        <tr style="border: 1px solid black; ">
            <td colspan="1" style="text-align: left; border-right: 1px solid black; height: 30px; padding: 5px;">
                T.C. KİMLİK NO
            </td>
            <td colspan="2" style="text-align: left; padding: 5px;">
                @Model.IdentityNo
            </td>
        </tr>
        <tr>
            <td colspan="1" style="text-align: left; border-right: 1px solid black; height: 30px; padding: 5px;">
                ADI SOYADI
            </td>
            <td colspan="2" style="text-align: left; padding: 5px;">
                @Model.Name @Model.Surname
            </td>
        </tr>
    </table>

    <br>

    <table style='width:700px; padding:5px; min-height: 70px; border: 1px  solid black; margin-left: auto; margin-right: auto;'>
        <tr style="text-align: left; vertical-align: top;">
            <td>
                <b> ADRES : &nbsp; </b> <a>@Model.Address1 @Model.Address2 @Model.County/@Model.City </a>
            </td>
        </tr>
    </table>

    <br>

    <table style="margin: auto;">
        <tr>
            <td>
                <a>
                    Adres beyanımın doğruluğunu, Gerçeğe aykırı durum tespiti halinde mevzuate göre işlem yapılmasını kabul ediyorum.
                </a>
            </td>
        </tr>
    </table>


    <table style='width:700px; margin-bottom: 100px; margin-top: 30px; margin-left: auto; margin-right: auto; border-collapse:collapse; border: 1px solid black;'>
        <tr>
            <td colspan="2" style="padding-left:5px; text-align: center; border-bottom: 1px solid black;">
                <h2>İMZA BEYANI</h2>
            </td>
        </tr>
        <tr>
            <td style="text-align: center; width: 50%; border-bottom: 1px solid black; border-right: 1px solid black;">
                KURSİYERİN ADI SOYADI
            </td>
            <td style="text-align: center; width: 50%; border-bottom: 1px solid black;">
                İMZA
            </td>
        </tr>

        <tr style="text-align: center;">
            <td rowspan="5" style="width: 50%; height: 200px; border-right: 1px solid black;">
                &nbsp;
            </td>
            <td rowspan="5" style="width: 50%; height: 200px">
                &nbsp;
            </td>
        </tr>
    </table>

</body>
</html>