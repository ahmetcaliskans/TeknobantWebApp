@model Entities.Concrete.CollectionDetail


<div class="row">
    <div class="col-xl-12">
        <div style="margin:5px 5px  5px 5px">

            <div class="form-group row fv-plugins-icon-container" hidden="hidden">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtDriverId" type="number" disabled="disabled" value="@if (Model != null && Model.Collection!=null) @Model.Collection.DriverInformationId">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>

            <div class="form-group row fv-plugins-icon-container" hidden="hidden">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtCollectionDefinitionId" type="number" disabled="disabled" value="@ViewData["CollectionDefinitionId"]">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>

            <div class="form-group row fv-plugins-icon-container" hidden="hidden">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtCollectionDefinitionTypeId" type="number" disabled="disabled" value="@ViewData["CollectionDefinitionTypeId"]">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>

            <div class="form-group row fv-plugins-icon-container" hidden="hidden">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtDriverCollectionId" type="number" disabled="disabled" value="@if (Model != null && Model.CollectionId != null && Model.CollectionId > 0) @Model.CollectionId">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>


            <div class="form-group row fv-plugins-icon-container">
                <label class="col-xl-3 col-lg-3 col-form-label">Id</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control" id="txtDriverCollectionDetailId" type="number" disabled="disabled" value="@if (Model != null && Model.Id != null) @Model.Id">
                    <div class="fv-plugins-message-container"></div>
                </div>
            </div>

            @await Component.InvokeAsync("PaymentTypeList", new { paymentTypeId = ((Model == null || Model.PaymentType == null) ? (int)0 : (int)Model.PaymentTypeId) })

            @if (Model != null && Model.CollectionDefinition != null && Model.CollectionDefinition.PayBySelf)
            {
                <div class="form-group row fv-plugins-icon-container">
                    <label class="col-xl-3 col-lg-3 col-form-label"></label>
                    <div class="col-lg-9 col-xl-9">
                        <label class="checkbox">
                            <input type="checkbox" id="chkPaidBySelf" @Html.Raw((Model != null) ? (((Model.PaidBySelf) ? "checked" : "")) : "checked")>
                            <span></span> Kendisi Ödedi
                        </label>
                    </div>
                </div>
            }


            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label">Tutar</label>
                <div class="col-lg-9 col-xl-9">
                    <input class="form-control numeric2" id="txtDriverCollectionDetailAmount" type="text" value="@string.Format("{0:n2}",(Model != null && Model.Amount>0) ? Model.Amount : ViewData["Debit"]))">
                </div>
            </div>

            @if (((int)ViewData["CollectionDefinitionTypeId"]) == 50)
            {
                <div class="form-group row">
                    <label class="col-xl-3 col-lg-3 col-form-label">Saat</label>
                    <div class="col-lg-9 col-xl-9">
                        <input class="form-control numeric2" id="txtHour" type="text" value="@string.Format("{0:n2}",(Model != null) ? Model.Hour : 0))">
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<script charset="utf-8" type="text/javascript" src="~/assets/js/pages/crud/forms/widgets/input-mask.js"></script>